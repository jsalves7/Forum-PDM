<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/sideBarView"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            style="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/scoreAnswerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="+ 10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/sideBarView"
        android:orientation="vertical">

        <TextView
            android:id="@+id/answerBodyView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="body Resposta really nice and all alsçfj açljf açlkjf aslçjf çalfj açljf açljf açlsdfj " />

        <TextView
            android:id="@+id/authorAnswerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="by Answer author on date"
            android:textColor="#aaa"
            android:textStyle="italic"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</RelativeLayout>