<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/sideBarView"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            style="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/scoreView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="+ 10" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_toRightOf="@id/sideBarView"
        android:layout_height="match_parent"
        android:layout_width="wrap_content">

        <TextView
            android:id="@+id/bodyView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="body jdsfjasijdfçlkasdjf çajf ajf falsçfj açljf açlkjf aslçjf çalfj açljf açljf açlsdfj "
            android:maxLines="4"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/authorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textColor="#aaa"
            android:text="by Question author on date"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</RelativeLayout>